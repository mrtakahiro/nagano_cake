<h2>登録情報</h2>
    <%= link_to  customers_show_path, class: 'nav-link text-black'

        <table border="1">
            <tr>
                <td>氏名</td>
                <td>
                <%= @customer.last_name %> <%= @customer.first_name %>
                </td>
            </tr>

            <tr>
                <td>カナ</td>
                <td>
                <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
                </td>
            </tr>

            <tr>
                <td>郵便番号</td>
                <td>
                <%= @customer.postal_code %>
                </td>
            </tr>

            <tr>
                <td>住所</td>
                <td>
                <%= @customer.address %>
                </td>
            </tr>

            <tr>
                <td>電話番号</td>
                <td>
                <%= @customer.telephone_number %>
                </td>
            </tr>

            <tr>
                <td>メールアドレス</td>
                <td>
                <%= @customer.email %>
                </td>
            </tr>
        </table>

